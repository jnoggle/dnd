{
    "rulesDirectory": [
       "./node_modules/tslint-microsoft-contrib",
       "./node_modules/tslint-eslint-rules/dist/rules"
    ],
    "rules": {
       "align": [false],
       "ban": [false],
       "class-name": true,
       "comment-format": [false],
       "curly": true,
       "eofline": false,
       "forin": true,
       "indent": [true, "spaces"],
       "interface-name": [false],
       "jsdoc-format": false,
       "label-position": true,
       "max-line-length": [false],
       "member-access": false,
       "member-ordering": [true,
          "public-before-private",
          "static-before-instance",
          "variables-before-functions"
       ],
       "no-any": false,
       "no-arg": true,
       "no-bitwise": false,
       "no-conditional-assignment": true,
       "no-consecutive-blank-lines": [true],
       "no-constant-condition": true,
       "no-construct": false,
       "no-debugger": true,
       "no-empty-line-after-opening-brace": true,
       "no-shadowed-variable": true,
       "no-duplicate-variable": true,
       "no-empty": true,
       "no-eval": true,
       "no-internal-module": true,
       "no-multiple-var-decl": true,
       "no-require-imports": false,
       "no-string-literal": false,
       "no-switch-case-fall-through": true,
       "no-trailing-whitespace": true,
       "no-unused-expression": true,
       "no-use-before-declare": false,
       "no-var-keyword": true,
       "no-var-requires": false,
       "object-curly-spacing": [true, "always"],
       "one-line": [true,
          "check-open-brace",
          "check-whitespace",
          "check-finally"
       ],
       "promise-must-complete": true,
       "no-floating-promises": true,
       "no-invalid-template-strings": true,
       "prefer-const": true,
       "no-return-await": true,
       "no-string-throw": true,
       "no-unsafe-finally": true,
       "await-promise": [true, "Bluebird"],
       "quotemark": [true, "single", "avoid-escape"],
       "radix": true,
       "semicolon": [false],
       "switch-default": true,
       "triple-equals": [true, "allow-null-check"],
       "typedef": [false],
       "typedef-whitespace": [true, {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
       }],
       "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
       "variable-name": false,
       "whitespace": [true,
          "check-branch",
          "check-decl",
          "check-operator",
          "check-separator",
          "check-type"
       ],
 
       // Microsoft Software Security lint rules: https://github.com/Microsoft/tslint-microsoft-contrib/wiki/TSLint-and-the-Microsoft-Security-Development-Lifecycle
       "no-banned-terms": true,
       "no-delete-expression": true,
       "no-document-domain": true,
       "no-disable-auto-sanitization": true,
       "no-duplicate-parameter-names": true,
       "no-exec-script": true,
       "no-function-constructor-with-string-args": true,
       "no-octal-literal": true,
       "no-reserved-keywords": false, // disabled because we use thsese in ways that make sense. Can reconsider.
       "no-string-based-set-immediate": true,
       "no-string-based-set-interval": true
    }
 }
 